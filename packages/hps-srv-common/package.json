{
  "name": "@hyperse/hps-srv-common",
  "version": "0.0.2-next.8",
  "homepage": "https://github.com/hyperse-io/hps",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperse-io/hps",
    "directory": "packages/hps-srv-common"
  },
  "author": {
    "name": "Hyperse",
    "url": "https://github.com/hyperse-io"
  },
  "type": "module",
  "license": "SEE LICENSE IN FILE 'LICENSE'",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "bin/",
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint .",
    "test": "run-s test-unit",
    "test-unit": "vitest run",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@armit/file-utility": "^0.3.1",
    "@armit/package": "^0.3.1",
    "@armit/terminal": "^0.3.0",
    "@hyperse/logger": "^1.1.7",
    "@hyperse/logger-plugin-stdout": "^1.0.11",
    "get-port": "^7.1.0",
    "import-meta-resolve": "^4.2.0",
    "ip": "^2.0.1"
  },
  "devDependencies": {
    "@hyperse/eslint-config-hyperse": "^1.4.8",
    "@hyperse/wizard": "^1.0.5",
    "@types/ip": "^1.1.3",
    "@types/node": "^24.5.2",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@hyperse/wizard": ">=1.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}

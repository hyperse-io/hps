{
  "name": "@hyperse/hps-graphqlsp",
  "version": "0.0.2-next.14",
  "homepage": "https://github.com/hyperse-io/hps",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperse-io/hps",
    "directory": "packages/hps-graphqlsp"
  },
  "author": {
    "name": "Hyperse",
    "url": "https://github.com/hyperse-io"
  },
  "type": "module",
  "license": "SEE LICENSE IN FILE 'LICENSE'",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "bin/",
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "serve": "yarn node --import=@hyperse/ts-node/register ./tests/dev-server.ts",
    "build": "node --import @hyperse/ts-node/register ./scripts/build.ts",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint .",
    "test": "run-s test-unit",
    "test-unit": "vitest run",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@armit/file-utility": "^0.3.1",
    "@hyperse/eslint-config-hyperse": "^1.4.8",
    "@types/graphql": "^14.5.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-istanbul": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.1",
    "graphql": "^16.12.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "graphql": ">=16.12.0",
    "typescript": ">=5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}

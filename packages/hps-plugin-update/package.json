{
  "name": "@hyperse/hps-plugin-update",
  "version": "0.1.0",
  "homepage": "https://github.com/hyperse-io/hps",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperse-io/hps",
    "directory": "packages/hps-plugin-update"
  },
  "license": "SEE LICENSE IN FILE 'LICENSE'",
  "author": {
    "name": "Hyperse",
    "url": "https://github.com/hyperse-io"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "bin/",
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "clean:test-snap": "rimraf --no-glob ./tests/__snapshots__",
    "lint": "eslint .",
    "test": "yarn clean:test-snap && run-s test-unit",
    "test-unit": "yarn clean:test-snap && vitest run",
    "test-coverage": "yarn clean:test-snap && vitest run --coverage",
    "test-unit-watch": "yarn clean:test-snap && vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@hyperse/config-loader": "^1.0.7",
    "@manypkg/get-packages": "^3.1.0",
    "has-yarn": "^4.0.0",
    "npm-check-updates": "^19.1.2",
    "package-up": "^5.0.0"
  },
  "devDependencies": {
    "@hyperse/eslint-config-hyperse": "^1.5.0",
    "@hyperse/wizard": "^1.0.6",
    "@types/node": "^24.10.2",
    "@vitest/coverage-istanbul": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "@hyperse/wizard": ">=1.0.6"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}

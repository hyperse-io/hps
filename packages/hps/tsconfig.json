{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": false,
    "noImplicitAny": true,
    "noEmit": false,
    "incremental": true,
    "paths": {
      "@hyperse/hps-plugin-info": [
        "../../packages/hps-plugin-info/src/index.ts"
      ],
      "@hyperse/hps-plugin-deploy": [
        "../../packages/hps-plugin-deploy/src/index.ts"
      ],
      "@hyperse/hps-plugin-update": [
        "../../packages/hps-plugin-update/src/index.ts"
      ]
    },
    "types": ["vitest/globals"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"]
}

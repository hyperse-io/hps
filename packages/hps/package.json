{
  "name": "@hyperse/hps",
  "version": "0.1.0-next.10",
  "homepage": "https://github.com/hyperse-io/hps",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperse-io/hps",
    "directory": "packages/hps"
  },
  "license": "SEE LICENSE IN FILE 'LICENSE'",
  "author": {
    "name": "Hyperse",
    "url": "https://github.com/hyperse-io"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "bin/",
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "serve": "yarn node --import=@hyperse/ts-node/register ./tests/evolve/dev-server.ts",
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "clean": "rimraf --no-glob ./dist ./_release ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint .",
    "test": "run-s test-unit",
    "test-unit": "vitest run",
    "test-coverage": "vitest run --coverage",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@hyperse/config-loader": "^1.0.6",
    "@hyperse/hps-plugin-build": "workspace:*",
    "@hyperse/hps-plugin-deploy": "workspace:*",
    "@hyperse/hps-plugin-info": "workspace:*",
    "@hyperse/hps-plugin-load-config": "workspace:*",
    "@hyperse/hps-plugin-mock": "workspace:*",
    "@hyperse/hps-plugin-serve": "workspace:*",
    "@hyperse/hps-plugin-update": "workspace:*",
    "@hyperse/wizard": "^1.0.5",
    "@hyperse/wizard-plugin-error": "^1.0.5",
    "@hyperse/wizard-plugin-help": "^1.0.5",
    "@hyperse/wizard-plugin-loader": "^1.0.5",
    "@hyperse/wizard-plugin-version": "^1.0.5",
    "package-directory": "^8.1.0"
  },
  "devDependencies": {
    "@armit/file-utility": "^0.3.1",
    "@hyperse/eslint-config-hyperse": "^1.4.8",
    "@hyperse/hps-srv-rspack": "workspace:*",
    "@hyperse/hps-srv-testing": "workspace:*",
    "@hyperse/ts-node": "^1.0.3",
    "@types/node": "^24.5.2",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "npm-run-all": "4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}

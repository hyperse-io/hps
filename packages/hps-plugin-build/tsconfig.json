{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "allowJs": false,
    "noImplicitAny": true,
    "noEmit": false,
    "incremental": true,
    "paths": {
      "@hyperse/hps-srv-common": ["../hps-srv-common/src/index.ts"],
      "@hyperse/hps-srv-rspack": ["../hps-srv-rspack/src/index.ts"],
      "@hyperse/hps-srv-rspack-plugin-postcss": [
        "../hps-srv-rspack-plugin-postcss/src/index.ts"
      ],
      "@hyperse/hps-srv-mock": ["../hps-srv-mock/src/index.ts"],
      "@hyperse/hps-srv-ts-checker": ["../hps-srv-ts-checker/src/index.ts"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/.*/", "dist", "build"]
}

{
  "name": "@hyperse/hps-website",
  "version": "0.0.2",
  "description": "Hyperse documentation website",
  "private": true,
  "homepage": "https://github.com/hyperse-io/hps#readme",
  "bugs": {
    "url": "https://github.com/hyperse-io/hps/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:hyperse-io/hps.git"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "next build && yarn postbuild",
    "postbuild": "next-sitemap && pagefind --site .next/server/app --output-path public/_pagefind",
    "build:ghpage": "cross-env NEXT_BUILD_ENV_OUTPUT='export' next build && yarn postbuild:ghpage",
    "postbuild:ghpage": "next-sitemap && pagefind --site .next/server/app --output-path out/_pagefind",
    "dev": "next dev -p 3000 -H 0.0.0.0",
    "fix-all-files": "eslint . --fix",
    "g:lint-staged-files": "lint-staged --allow-empty",
    "lint": "eslint .",
    "start": "next start -p 3000 -H 0.0.0.0",
    "test": "vitest run",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@heroui/react": "^2.8.5",
    "@iconify/react": "^6.0.2",
    "@tailwindcss/typography": "^0.5.19",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.25",
    "lucide-react": "^0.561.0",
    "next": "^16.0.8",
    "nextra": "^4.6.1",
    "nextra-theme-docs": "^4.6.1",
    "postcss": "^8.5.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "recharts": "^3.6.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@hyperse/eslint-config-hyperse": "^1.5.0",
    "@hyperse/next-config": "^1.0.7",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "commitizen": "^4.3.1",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "lint-staged": "^16.2.7",
    "next-sitemap": "^4.2.3",
    "pagefind": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "zod": "^4.1.13"
  }
}
